@model Fanfic.Models.ViewModels.LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Registration</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
    <link href="~/css/register.css" rel="stylesheet" />
    <link href="~/css/validation.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="card bg-light" style="margin-top: 30px;">
            <article class="card-body mx-auto" style="max-width: 600px;">
                <h4 class="card-title mt-3 text-center">Sign In</h4>
                <form method="post" asp-action="Login" asp-controller="Account">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="row">
                        <div class="col-6" style="margin-top: 50px;">
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                                </div>
                                <input class="form-control" asp-for="Email" placeholder="Email" type="text" />
                            </div>
                            <div class="form-group">
                                <span asp-validation-for="Email"></span>
                            </div>

                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                </div>
                                <input class="form-control" asp-for="Password" placeholder="Password" type="password" />
                            </div>
                            <div class="form-group">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group ">
                                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                            </div>
                            <p class="text-center"> Don't have an account? <a asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a> </p>
                        </div>
                        <div class="col-6">
                            <img src="~/images/signin-image.jpg" style="width:inherit" />
                        </div>
                    </div>
                </form>
            </article>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    }

</body>
</html>

