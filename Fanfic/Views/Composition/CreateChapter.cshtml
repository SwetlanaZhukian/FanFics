@model Fanfic.Models.ViewModels.ChapterCreateViewModel
<!DOCTYPE html>
<html>
<head>
    <script src="~/lib/dropzone/min/dropzone.min.js"></script>
    <link href="~/lib/dropzone/min/dropzone.min.css" rel="stylesheet" />
</head>
<body>
    @{
        ViewData["Title"] = "CreateChapter";
    }

    <h1>Create Chapter</h1>
    <hr />
    <div class="row">
        <div class="col-md-10">
            <form enctype='multipart/form-data' asp-action="CreateChapter">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input hidden asp-for="CompositionId" class="form-control" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" id="textarea-editor" rows="20" style="width:600px;" class="form-control input-lg textarea-editor"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="File" class="control-label"></label>
                    <div>
                        <input asp-for="File" type="file" />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit"  id="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

   
