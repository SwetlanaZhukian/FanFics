@model Fanfic.Models.ViewModels.ChapterCreateViewModel
<!DOCTYPE html>
<html>
<head>
</head>
<body>
    @{
        ViewData["Title"] = "CreateChapter";
    }

    <h1>Create Chapter</h1>
    <hr />
    <div class="row">
        <div class="col-md-10">
            <form asp-action="CreateChapter">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" id="textarea-editor" rows="20" style="width:600px;" class="form-control input-lg textarea-editor"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    @section Scripts {
        <script>

            $(document).ready(function () {
                $('#textarea-editor').summernote({
                    height:300, 
                    minHeight: null,
                    maxHeight: null, 
                    focus: true 
                });
            });

        </script>
      

    }

</body>
</html>

