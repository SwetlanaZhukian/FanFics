<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fanfic</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-star-rating/css/star-rating.css" rel="stylesheet" />
    <link href="~/lib/jqcloud/jqcloud.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/lib/bootstrap-star-rating/themes/krajee-fa/theme.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/jqueryui/jquery-ui.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-tokenfield/css/bootstrap-tokenfield.css" rel="stylesheet" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Fanfic</a>
                @if (User.IsInRole("Admin"))
                {
                <a class="navbar-brand" asp-area="" asp-controller="Administrator" asp-action="Index">Admin</a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="Index">My Profile</a>
                }
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="GetAllCompositions">All compositions</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @if (User.Identity.IsAuthenticated)
                    {
                    <form method="post" asp-controller="Account" asp-action="Logout">
                        <ul class="nav navbar-nav navbar-right ">
                            <li class="p-2 bd-highlight">
                                <i>Hello, @User.Identity.Name</i>
                            </li>
                            <li>
                                <button type="submit" class="btn btn-link navbar-btn navbar-link text-dark">Sign out</button>
                            </li>
                        </ul>
                    </form>
                    }
                    else
                    {
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Sign up</a>
                        </li>
                    </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap-star-rating/js/star-rating.js"></script>
    <script src="~/lib/bootstrap-star-rating/themes/krajee-fa/theme.js"></script>
    <script src="~/lib/jqcloud/jqcloud-1.0.3.js"></script>
  

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/lib/bootstrap-tokenfield/bootstrap-tokenfield.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
